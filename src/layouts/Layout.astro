---
import '../styles/global.css'; // Import global styles (Tailwind)
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'Karol Rutkowski - Software Engineer',
	description = 'Personal website and portfolio of Karol Rutkowski, a Software Engineer specializing in web development.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 min-h-screen bg-gradient-to-b from-sky-950 to-black text-slate-100">
		<header class="py-6 bg-sky-900/50 backdrop-blur-sm rounded-lg my-4 fixed top-0 left-0 right-0 z-10">
			<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
				<div class="text-xl font-bold text-sky-400">Karol Rutkowski</div>

				<!-- Mobile menu button -->
				<button class="md:hidden p-2" id="menu-button" aria-label="Toggle menu">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>

				<!-- Desktop navigation -->
				<nav class="hidden md:flex space-x-8">
					<a href="/" class="hover:text-sky-400 transition-colors">Home</a>
					<a href="/projects" class="hover:text-sky-400 transition-colors">Projects</a>
					<a href="/experience" class="hover:text-sky-400 transition-colors">Experience</a>
					<a href="/education" class="hover:text-sky-400 transition-colors">Education</a>
					<a href="/skills" class="hover:text-sky-400 transition-colors">Skills</a>
					<a href="/blog" class="hover:text-sky-400 transition-colors">Blog</a>
					<a href="/contact" class="hover:text-sky-400 transition-colors">Contact</a>
				</nav>

				<!-- Mobile navigation -->
				<nav
					class="transform transition-all duration-300 ease-in-out absolute top-full left-0 right-0 bg-sky-900/95 backdrop-blur-sm mt-2 p-4 rounded-lg"
					id="mobile-menu"
					style="opacity: 0; transform: scale(0.95); display: none;"
				>
					<div class="flex flex-col space-y-4">
						<a href="/" class="hover:text-sky-400 transition-colors">Home</a>
						<a href="/projects" class="hover:text-sky-400 transition-colors">Projects</a>
						<a href="/experience" class="hover:text-sky-400 transition-colors">Experience</a>
						<a href="/education" class="hover:text-sky-400 transition-colors">Education</a>
						<a href="/skills" class="hover:text-sky-400 transition-colors">Skills</a>
						<a href="/blog" class="hover:text-sky-400 transition-colors">Blog</a>
						<a href="/contact" class="hover:text-sky-400 transition-colors">Contact</a>
					</div>
				</nav>
			</div>
		</header>

		<script is:inline>
			const menuButton = document.getElementById('menu-button');
			const mobileMenu = document.getElementById('mobile-menu');
			menuButton.addEventListener('click', () => {
				if (mobileMenu.style.display === 'none') {
					mobileMenu.style.display = 'block';
					setTimeout(() => {
						mobileMenu.style.opacity = '1';
						mobileMenu.style.transform = 'scale(1)';
					}, 10);
				} else {
					mobileMenu.style.opacity = '0';
					mobileMenu.style.transform = 'scale(0.95)';
					setTimeout(() => {
						mobileMenu.style.display = 'none';
					}, 300);
				}
			});
		</script>

		<main class="pt-24 pb-12">
			<slot />
		</main>

		<Footer />
		<script>
			import AOS from 'aos';
			AOS.init({
				duration: 1000,
				once: true,
			});
		</script>
	</body>
</html>
