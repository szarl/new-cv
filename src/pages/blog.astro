---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';

// Define blog posts in a structured array
const posts = [
	{
		slug: 'first-blog',
		title: 'My First Blog Post',
		excerpt: "An introduction to my journey as a software engineer and the projects I've been working on recently.",
		date: 'March 10, 2025',
		delay: 100,
	},
	// Add more posts here as you create them
];
---

<Layout title="Blog - Karol Rutkowski">
	<section class="min-h-screen flex justify-center py-20 px-4">
		<div class="max-w-6xl mx-auto w-full">
			<h1 class="text-4xl md:text-6xl font-bold mb-12 text-center text-white" data-aos="zoom-in-up">My Blog</h1>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					posts.map((post) => (
						<div data-aos="fade-up" data-aos-delay={post.delay}>
							<div class="bg-gray-800/50 rounded-lg p-6 shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-xl border border-[rgba(255,255,255,0.1)] hover:border-[rgba(255,255,255,0.2)]">
								<h2 class="text-2xl font-semibold text-sky-400 mb-2">{post.title}</h2>
								<p class="text-gray-400 text-sm mb-4">{post.excerpt}</p>
								<p class="text-gray-500 text-xs mb-4">
									<strong>Date:</strong> {post.date}
								</p>
								<a href={`/blog/${post.slug}`} class="flex items-center text-sky-400 hover:text-sky-300 transition-colors duration-300">
									<Icon name="open-in-new" class="w-4 h-4 mr-2" />
									<span class="text-sm">Read More</span>
								</a>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</section>
</Layout>
